<div class="card card-body mb-1 text-lg-left text-center triggerHide">
    <div class="row">
        <div class="col-md-2">
            <h4 class="h4-responsive">{{ room.start|date('H:i') }} - {{ room.enddate|date('H:i') }}</h4>
            {% if room in runningRooms %}<small class="badge badge-success">Läuft
            gerade</small><br>{% endif %}
            {% if app.user == room.moderator %}
                <span class="badge badge-info">Moderator</span>{% endif %} <br>
        </div>
        <div class="col-md-4">
            <h4>{{ room.name }}</h4>
            <p class="text-black-50 small">
                Moderator: {{ room.moderator.firstName }} {{ room.moderator.lastName }}<br>
                Server: {{ room.server.url }}<br>
                Anzahl Teilnehmer: {{ room.user|length }}
            </p>
        </div>
        <div class="col-md-6 hide">
            <div class="row">
                <div class="col-lg-4">
                    <div class="dropdown d-none d-md-block">
                        <button class="btn btn-primary dropdown-toggle" type="button"
                                id="dropdownMenu1"
                                data-toggle="dropdown" aria-haspopup="true"
                                aria-expanded="true">
                            Starten
                        </button>
                        <ul class="dropdown-menu p-1" aria-labelledby="dropdownMenu1">
                            <li><a href="{{ path('room_join',{'t':'b','room':room.id}) }}"
                                   target="_blank">Im
                                    Browser</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a title="In der Electron Jitsi Meet App" href="{{ path('room_join',{'t':'a','room':room.id}) }}"
                                   target="_blank">In
                                    der App</a></li>
                        </ul>
                    </div>
                    <div class="d-block d-md-none">
                        <a class="btn btn-primary"
                           href="{{ path('room_join',{'t':'b','room':room.id}) }}"
                           target="_blank">Beitreten</a>
                    </div>
                </div>
                <div class="col-lg-4">
                    {% if room.moderator == app.user %}
                        <div class="dropdown">
                            <button class="btn btn-outline-secondary dropdown-toggle" type="button"
                                    id="dropdownMenu1"
                                    data-toggle="dropdown" aria-haspopup="true"
                                    aria-expanded="true">
                                Optionen
                            </button>
                            <ul class="dropdown-menu p-1" aria-labelledby="dropdownMenu1">
                                <li><a class="confirmHref"
                                       href="{{ path('room_remove',{'room':room.id}) }}">
                                        Löschen</a></li>
                                <li><a href="{{ path('room_new',{'id':room.id}) }}"
                                       class="loadContent">
                                        Bearbeiten</a></li>
                            </ul>
                        </div>
                    {% endif %}
                </div>
                <div class="col-lg-4">
                    {% if room.moderator == app.user %}
                        <a href="{{ path('room_add_user',{'room':room.id}) }}"
                           class="btn btn-outline-default loadContent">Teilnehmer</a>
                    {% else %}
                        <div>
                            <a href="{{ path('room_user_remove',{'room':room.id, 'user':app.user.id}) }}"
                               class="btn btn-outline-default confirmHref">Entfernen</a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
