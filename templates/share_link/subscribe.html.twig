{% extends 'join/base.html.twig' %}
{% block header %}
    <h1 class="h1-responsive text-center">{{ room.name }}</h1>
    <p class=" text-center">  {% set locale =  app.request.locale %}
        {{ room.start|format_date(pattern="EEEE",locale=locale) }}
        | {{ room.start|format_datetime('long', 'none', locale=locale) }}
        | {{ room.start|date('H:i') }}-{{ room.endDate|date('H:i') }}</p>
{% endblock %}


{% block content %}



    <div class="offset-sm-1 col-sm-10 offset-lg-2 col-lg-8">
        <p class="text-center text-md-left">
            {{ 'Melden Sie sich an und schreiben Sie sich auf der Teilnehmerliste ein'|trans }}
        </p>
        {{ form_start(form) }}
        {{ form_row(form.firstName) }}
        {{ form_row(form.lastName) }}
        {{ form_row(form.email) }}

        <div class="row form-group">

            <div class="col-12">
                <p class="small">
                    {% if server and server.privacyPolicy %}
                        {% trans with {'{dataPrivay}': dataPrivacy,'{url}': server.url,'{privacyUrl}':server.privacyPolicy} %}
                            Ich habe die
                            <a href="{dataPrivay}" target="_blank" referrerpolicy="no-referrer">
                                <u>Datenschutzhinweise von Jitsi Admin</u>
                                <i class="fa fa-external-link-alt"></i>
                            </a>
                            und die
                            <a href="{privacyUrl}" target="_blank"
                               referrerpolicy="no-referrer">
                                <u>Datenschutzhinweise von {url}</u>
                                <i class="fa fa-external-link-alt"></i>
                            </a>
                            gelesen und nehme diese zur Kenntnis.
                        {% endtrans %}

                    {% else %}
                        {% trans with {'{dataPrivay}': dataPrivacy} %}
                            Ich habe die
                            <a href="{dataPrivay}" target="_blank" referrerpolicy="no-referrer">
                                <u>Datenschutzhinweise von Jitsi Admin</u>
                                <i class="fa fa-external-link-alt"></i>
                            </a>
                            gelesen und nehme diese zur Kenntnis.
                        {% endtrans %}
                    {% endif %}
                </p>
                {% if not server %}
                    <p style="font-size: 10px">
                        {% trans %}
                            Wir weisen darauf hin, dass Sie durch das klicken auf "Beitreten"
                            auf einen Jitsi-Meet-Server weitergeleitet werden. Jitsi Admin gibt den "Name" aus
                            dem Formular an den Jitsi-Meet-Server weiter.
                        {% endtrans %}
                    </p>
                {% endif %}
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                {{ form_row(form.subscribe) }}
            </div>

        </div>

        {{ form_end(form) }}

    </div>

{% endblock %}
