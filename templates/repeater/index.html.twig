<div class="modal-dialog modal-dialog-centered ">
    <div class="modal-content">

        <div class="modal-header  light-blue darken-3 white-text">
            <h5 class="modal-title">{{ 'Serien Termin'|trans }}</h5>
            <button style="color: white" type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">Ã—</span>
            </button>
        </div>
        <div class="modal-body">
            {{ form_start(form) }}
            <div class="row">

                <div class="col-md-6">
                  {{ form(form.repeatType) }}
                </div>
                <div class="col-md-6">
                    <div id="repeater_0" class="repeater">
                        {{ form_row(form.repeaterDays) }}
                    </div>
                    <div id="repeater_1" class="d-none repeater">

                        {{ form_row(form.repeaterWeeks) }}
                        {{ form_row(form.weekday) }}
                    </div>
                    <div id="repeater_2" class="d-none repeater">
                        {{ form_row(form.repeatMontly) }}
                    </div>
                    <div id="repeater_3" class="d-none repeater">
                        {{ form(form.repeatYearly) }}
                    </div>


                </div>
                <div class="col-lg-12 text-center mt-4">
                    {{ form_row(form.repetation) }}
                </div>


            </div>
            {{ form_end(form) }}

        </div>
    </div>
</div>
